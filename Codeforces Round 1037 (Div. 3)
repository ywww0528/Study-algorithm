//https://codeforces.com/contest/2126/problem/C
//2025.7.19 Codeforces Round 1037 (Div. 3)

#include<iostream>
#include<vector>
#include<algorithm>
using namespace std;
void solve() {
	int n, k;
	cin >> n >> k;
	vector<int> a(n + 1);
	for (int i = 1; i <= n; i++) {
		cin >> a[i];
	}
	int cur = a[k];
	int dit = a[k];
	sort(a.begin()+1, a.begin() + n + 1);
	bool f = true;
	for (int i = 1; i <= n; i++) {
		if (a[i] < cur)continue;
		if (a[i]-cur > dit)f = false;
		cur = a[i];
	}
	if (f)cout << "YES" << endl;
	else cout << "NO" << endl;
}
int main() {
	int t;
	cin >> t;
	while (t--) {
		solve();
	}
}
